{
  "name": "HeaderHunter",
  "description": "POST details of the current page to a remote endpoint.",
  "manifest_version": 2,
  "version": "1.0",
  "permissions": [
    "webRequest",
    "*://*/*"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}